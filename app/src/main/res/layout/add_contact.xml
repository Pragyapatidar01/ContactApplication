<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/purple1">

    <androidx.cardview.widget.CardView
        android:id="@+id/contact_cardview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/contact_imageview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/blue1"
            android:contentDescription="" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/select_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:layout_below="@+id/contact_cardview"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#7955B8">
    </Button>

    <LinearLayout
        android:id="@+id/contact_form1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_below="@id/select_image_btn"
        android:layout_margin="25dp"
        android:paddingVertical="30dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/shape"
        android:alpha="0.7">

        <EditText
            android:id="@+id/full_name_edittext1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:hint="Enter Name"
            android:inputType="text"
            android:autofillHints="" />

        <EditText
            android:id="@+id/phone_number_edittext1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:hint="Enter Phone Number"
            android:inputType="phone"
            android:autofillHints=""/>

        <EditText
            android:id="@+id/email_edittext1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:autofillHints=""/>

        <EditText
            android:id="@+id/company_edittext1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:hint="Enter Company"
            android:inputType="text"
            android:autofillHints=""/>


    </LinearLayout>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_below="@+id/contact_form1"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#7955B8"/>

</RelativeLayout>
</layout>